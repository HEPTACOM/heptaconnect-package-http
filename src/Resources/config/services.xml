<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <prototype namespace="Heptacom\HeptaConnect\Package\Http\" resource="../../">
            <exclude>../../Components/HttpCache/Event</exclude>
            <exclude>../../Components/HttpRequestCycleProfiling/HttpRequestCycle.php</exclude>
        </prototype>

        <service id="event_dispatcher" alias="Symfony\Component\EventDispatcher\EventDispatcherInterface"/>

        <service id="Heptacom\HeptaConnect\Package\Http\Components\HttpCache\HttpCache" autowire="true">
            <tag name="heptaconnect.http.client.middleware" priority="-200"/>
        </service>
    </services>
</container>
